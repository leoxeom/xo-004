  "cognitive_design_principles": {
    "core_laws_summary": {
      "hick_law": {
        "principle": "Plus le nombre d'options augmente, plus le temps de décision est long",
        "application": "Limiter les choix visibles (menus simples, procédures par étapes)",
        "planner_suite_implementation": [
          "Navigation principale max 5-7 éléments",
          "Wizard progressif pour création d'événements",
          "Menus contextuels avec options essentielles uniquement"
        ]
      },
      "fitts_law": {
        "principle": "Le temps nécessaire pour atteindre une cible dépend de sa taille et de sa distance",
        "application": "Boutons d'action suffisamment grands et proches",
        "planner_suite_implementation": [
          "Boutons CTA minimum 44x44px",
          "Actions principales dans zones facilement accessibles",
          "Toolbar flottante pour actions fréquentes"
        ]
      },
      "doherty_threshold": {
        "principle": "Système doit répondre en <400ms pour maintenir l'attention",
        "application": "Feedback visuel immédiat, animations de chargement",
        "planner_suite_implementation": [
          "Skeleton screens pendant chargement calendrier",
          "Animations micro-interactions <200ms",
          "Spinners avec progression estimée"
        ]
      },
      "von_restorff_effect": {
        "principle": "L'élément distinctif est le mieux mémorisé",
        "application": "Mise en valeur réfléchie des éléments clés",
        "planner_suite_implementation": [
          "Événements urgents avec accents colorés",
          "CTA principal avec contraste maximal",
          "Notifications importantes avec glow effect"
        ]
      },
      "jakob_law": {
        "principle": "Utilisateurs préfèrent interfaces familières",
        "application": "Respecter conventions établies",
        "planner_suite_implementation": [
          "Logo cliquable top-left",
          "Navigation standard avec icônes universelles",
          "Patterns calendrier reconnaissables"
        ]
      },
      "miller_rule": {
        "principle": "Mémoire retient 7±2 éléments",
        "application": "Information en paquets de 5-7 unités",
        "planner_suite_implementation": [
          "Formulaires en sections logiques",
          "Dashboard avec 5-7 widgets maximum",
          "Navigation groupée par catégories"
        ]
      },
      "gestalt_principles": {
        "principle": "Regroupement par proximité, similarité, continuité",
        "application": "Utiliser proximité et similarité pour guider l'œil",
        "planner_suite_implementation": [
          "Groupement d'éléments liés visuellement",
